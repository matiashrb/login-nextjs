// Esto le dice a Prisma que genere el cliente para JavaScript/TypeScript
generator client {
  provider = "prisma-client-js"
}

// Aqu√≠ configuramos SQLite
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Nuestro modelo de Usuario
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
